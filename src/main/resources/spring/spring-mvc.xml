<?xml version="1.0" encoding="UTF-8"?>
    <beans xmlns="http://www.springframework.org/schema/beans"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:context="http://www.springframework.org/schema/context"
           xmlns:mvc="http://www.springframework.org/schema/mvc"
           xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-4.3.xsd
      http://www.springframework.org/schema/mvc
      http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

    <!-- mvc标注生效 -->
    <mvc:annotation-driven/>
    <!-- 自动扫描组件 -->
    <context:component-scan base-package="cn.suqc.controller"/>
    <!-- 配置视图解析器 -->
    <bean id="viewResolve" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- 配置资源 -->
    <mvc:resources location="/static/css" mapping="/css/**"></mvc:resources>
    <mvc:resources location="/static/js" mapping="/js/**"></mvc:resources>
    <mvc:resources location="/static/img" mapping="/img/**"></mvc:resources>

</beans>